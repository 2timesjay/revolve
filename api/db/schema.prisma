datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Budget {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Item {
  id     Int    @id @default(autoincrement())
  name   String
  amount Int    @default(0)
}
